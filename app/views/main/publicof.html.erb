<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Mis Publicaciones</h1>

  <% @publications.each do |publication| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= publication.title %>
      <%= image_tag(publication.photo, :class => 'img-responsive') %>
      <%= publication.address %>
      <%= publication.description %> 
      <br>
      <%= publication.telephone %>
      
      <div class="buttons" style="margin-top:10px; margin-bottom:10px">
        <%= link_to 'Show', publication, :class => 'btn' %>
        <%= link_to 'Edit', edit_publication_path(publication), :class => 'btn' %>
        <% if user_signed_in? %>
          <%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
        <% end %>
      </div>

    </div>
  </div>
  <% end %>

  <br>
  
  <% if user_signed_in? %>
